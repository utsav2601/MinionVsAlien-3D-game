<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="start" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="background" childLayout="center">
            <image id="" height="100%" width="100%" filename="Interface/alienVSminion.png"/>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_title" height="12.5%" width="75%" align="center" childLayout="center"/>
            <panel id="panel_input" height="12.5%" width="25%" align="center" childLayout="vertical" valign="center">
                <panel id="" childLayout="horizontal">
                    <control name="dropDown" id="totalRounds"/>
                </panel>
            </panel>
            <panel id="panel_mid_bottom" height="50%" width="75%" align="center" childLayout="vertical"/>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal">
                <panel id="StartPanel" height="50%" width="50%" align="center" childLayout="center">
                    <control name="button" id="StartButton" align="center" label="Start" valign="center"/>
                      <interact onClick="startGame()" />
                </panel>
                <panel id="QuitPanel" height="50%" width="50%" align="center" childLayout="center">
                    <control name="button" id="QuitButton" align="center" label="Quit" valign="center"/>
                     <interact onClick="quit()" />
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="GLayer2" childLayout="center">
            <image id="GImage1" height="100%" width="100%" filename="Interface/HudBackground.png"/>
        </layer>
        <layer id="forground" align="center" childLayout="vertical">
            <panel id="stats_panel" height="6%" width="100%" childLayout="horizontal"/>
            <panel id="blank" height="94%" width="100%" childLayout="horizontal"/>
        </layer>
    </screen>
    <screen id="pause" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="GLayer4" childLayout="center">
            <image id="GImage2" height="100%" width="100%" filename="Interface/GUIBackground.png"/>
        </layer>
        <layer id="GLayer5" height="90%" width="90%" align="center" childLayout="vertical">
            <panel id="pausedText" height="50%" width="100%" childLayout="center"/>
            <panel id="reset_panel" height="50%" width="100%" childLayout="center">
                <control name="button" id="ContinueButton" align="center" label="Continue" valign="center"/>
                 <interact onClick="continueGame()" />
            </panel>
        </layer>
    </screen>
    <screen id="end" controller="com.hemen.CMSC325.FinalProject.GuiAppState">
        <layer id="GLayer6" childLayout="center">
            <image id="GImage3" height="100%" width="100%" filename="Interface/HudBackground.png"/>
        </layer>
        <layer id="GLayer7" align="center" childLayout="vertical">
            <panel id="GPanel11" height="6%" width="100%" childLayout="horizontal"/>
            <panel id="GPanel12" height="69%" width="100%" childLayout="horizontal"/>
            <panel id="endButton" height="25%" width="100%" childLayout="center">
                <control name="button" id="EndButton" align="center" label="OK" valign="center"/>
                 <interact onClick="ackEnd()" />
            </panel>
        </layer>
    </screen>
</nifty>
